<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marchelo.inventario.buscarDatos">


    <EditText
        android:id="@+id/Ebuscar"
        android:hint="@string/txtBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/NNombre"
        android:hint="@string/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ebuscar" />
    <EditText
        android:id="@+id/NStock"
        android:layout_below="@+id/NNombre"
        android:hint="@string/txtStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/NValor"
        android:layout_below="@+id/NStock"
        android:hint="@string/txtValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Bbuscar"
        android:layout_below="@+id/NValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnBuscar"
        android:onClick="buscarProducto"/>
    <Button
        android:id="@+id/BEliminar"
        android:layout_below="@+id/Bbuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnEliminar"
        android:onClick="eliminarProducto"/>
    <Button
        android:id="@+id/BActualizar"
        android:layout_below="@+id/BEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnActualizar"
        android:onClick="actualizarProducto"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BActualizar"
        android:text="@string/btnListar"
        android:id="@+id/blista"
        android:onClick="listarVen"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blista"
        android:text="@string/btnVolver"
        android:id="@+id/volver"
        android:onClick="volverInicio"
        />


</RelativeLayout>
